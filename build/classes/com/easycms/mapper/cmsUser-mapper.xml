<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.easycms.entity.CmsUser">
    <!-- 插入操作 -->
	<insert id="add" parameterType="user">
	 <!--  insert into ec_user() values() -->
	</insert>
	<!-- 删除操作 -->
	<delete id="delete" parameterType="int">
	  delete from ec_user where id=#{id}
	</delete>
	<delete id="deleteIn" parameterType="java.util.List">
	  delete from ec_user where id in
	  <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
	      ${item}
	  </foreach>
	</delete>
	<!-- 修改操作 -->
	<update id="update" parameterType="user">
	  update ec_user set username=#{username} where id=#{id}
	</update>
	<!--  查询操作-->
	<select id="findById" resultType="user" parameterType="int">
	  select * from ec_user where id=#{id}
	</select>
	<!-- 查询全部 -->
	<select id="findAll" resultType="user">
	   select * from ec_user
	</select>
	<!-- 分页查询 -->
	<select id="findByPage" resultType="user" parameterType="map">
	  select * from ec_user limit #{showPages},#{pageSize}
	</select>
	<!-- 总页数 -->
	<select id="findTotal" resultType="int" parameterType="int">
	  select count(*) from ec_user
	</select>
    <!-- 根据用户名获得对象 -->
	<select id="findByName" resultType="user" parameterType="map">
	  select * from ec_user where username=#{username}
	</select>
</mapper>    